@model weight_wise_Invoice.Models.WeightInvoice
@{
    ViewBag.Title = "Invoice Generated";
}

<!-- ✅ Bootstrap & FontAwesome Links -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-lg" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-dark text-white text-center py-3">
            <h2 class="mb-0"><i class="fas fa-file-invoice-dollar"></i> Invoice Details</h2>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light">Customer Name:</th>
                        <td>@Model.CustomerName</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Date:</th>
                        <td>@Model.Date</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Weight:</th>
                        <td>@Model.Weight Kg</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Quantity:</th>
                        <td>@Model.Quantity</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Price Per Kg:</th>
                        <td><strong>Rs. @Model.Price</strong></td>
                    </tr>
                    <tr class="table-warning">
                        <th class="text-danger h4">Total Amount:</th>
                        <td class="text-danger h4"><strong>Rs. @Model.TotalAmount</strong></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="@Url.Action("WeightInvoice", "WeightWise")" class="btn btn-outline-dark btn-lg">
                <i class="fas fa-arrow-left"></i> Back
            </a>

            <form method="post" action="@Url.Action("SaveInvoiceData", "WeightPayment")">
                <input type="hidden" name="customerName" value="@Model.CustomerName" />
                <input type="hidden" name="totalAmount" value="@Model.TotalAmount" />
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fas fa-credit-card"></i> Proceed to Payment
                </button>
            </form>
        </div>
    </div>
</div>

<!-- ✅ Bootstrap Script -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
